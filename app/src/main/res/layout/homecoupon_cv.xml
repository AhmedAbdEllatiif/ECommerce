<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summerCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        app:contentPadding="7dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/summerImg"
        android:layout_width="200sp"
        android:layout_height="120dp"
        android:background="@drawable/summer_image"
        android:scaleType="fitXY"
        />


        <TextView
            android:id="@+id/txtSummerNights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot_summer_night"
            android:drawableStart="@drawable/summer_icon"
            android:drawablePadding="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/summerImg"
            app:layout_constraintBottom_toBottomOf="@id/summerImg"
            android:layout_marginStart="10dp"
            tools:ignore="RtlCompat"
            android:gravity="bottom"
            />

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>