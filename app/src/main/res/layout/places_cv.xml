<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    app:contentPadding="4dp"
    android:layout_marginTop="7dp"
    android:layout_marginStart="4dp"
    tools:ignore="RtlCompat">


<android.support.v7.widget.CardView
    android:id="@+id/placesCardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <ImageView
        android:id="@+id/imag_place_ava"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/beauty_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
</android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/place_name_id"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Foods icom"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/placesCardView"
            app:layout_constraintStart_toStartOf="@id/placesCardView"

            />

    </android.support.constraint.ConstraintLayout>

